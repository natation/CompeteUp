<% action = for_sign_up ? users_url : session_url %>
<% submit_val = for_sign_up ? "Sign Up" : "Log In" %>
<% email = for_sign_up ? @user.email : "" %>

<form action="<%= action %>" method="post">
  <%= auth_token %>

  <% if for_sign_up %>
  <div class="row form-group">
    <div class="col-md-offset-3 col-md-6">
      <label for="user_name">Your name (this is public)</label>
      <input type="text" class="form-control" name="user[name]" id="user_name" value="<%= @user.name %>">
    </div>
  </div>
  <% end %>

  <div class="row form-group">
    <div class="col-md-offset-3 col-md-6">
      <label for="user_email">Email address</label>
      <input type="text" class="form-control" name="user[email]" id="user_email" value="<%= email %>">
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-offset-3 col-md-6">
      <label for="user_password">Password</label>
      <input type="password" class="form-control" name="user[password]" id="user_password">
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <button type="submit" class="btn btn-default"><%= submit_val %></button>
    </div>
  </div>
</form>
